<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/corner_back_10"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_event_view_holder"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:actualImageScaleType="fitXY"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimary"
        app:placeholderImage="@drawable/ic_derkamsan" />

    <RelativeLayout
        android:id="@+id/bottom_event_view_holder_side"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/img_event_view_holder">

        <ImageView
            android:id="@+id/icon_calendar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_calendar" />

        <TextView
            android:id="@+id/txt_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon_calendar"
            android:paddingTop="8dp"
            android:text="Happy water fastival day" />

        <TextView
            android:id="@+id/txt_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_event_title"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/icon_calendar"
            android:text="01 jan 2018" />

    </RelativeLayout>

</LinearLayout>