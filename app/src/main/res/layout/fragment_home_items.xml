<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    android:paddingBottom="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corner_back_10"
        android:padding="8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Trip to Siem Reap Angkor in Cambodia"
            android:layout_height="wrap_content" />
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_margin="4dp"
            android:id="@+id/img_Place"
            android:layout_gravity="center"
            app:placeholderImage="@drawable/ic_default_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:actualImageScaleType="fitXY"
            android:adjustViewBounds="true"

            />
        <TextView
            android:id="@+id/txtShortDesc"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:text="       Siem Reap province is located in northwest
  Cambodia. It is the major tourist hub in Cambodia,
  as it is the closest city to the world famous......."
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>